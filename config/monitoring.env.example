# Monitoring Stack Environment Variables
# Copy to .env and fill in your values

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# AlertManager - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# AlertManager - Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=alerts@dpg-cluster.local
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email distribution lists
CRITICAL_EMAIL_LIST=oncall@dpg-cluster.local,devops@dpg-cluster.local
DATABASE_TEAM_EMAIL=database@dpg-cluster.local
PERFORMANCE_TEAM_EMAIL=performance@dpg-cluster.local
SECURITY_TEAM_EMAIL=security@dpg-cluster.local

# AlertManager - PagerDuty
PAGERDUTY_SERVICE_KEY=your-pagerduty-integration-key

# PostgreSQL Connection (for exporters)
POSTGRES_HOST=dpg-postgres-dev
POSTGRES_PORT=5432
POSTGRES_USER=dpg_cluster
POSTGRES_PASSWORD=dpg_cluster_2026
POSTGRES_DB=distributed_postgres_cluster

# Redis Connection (for exporters)
REDIS_HOST=dpg-redis-dev
REDIS_PORT=6379

# Custom Exporter
EXPORTER_PORT=9999
SCRAPE_INTERVAL=15

# PgAdmin (optional)
PGADMIN_EMAIL=admin@dpg.local
PGADMIN_PASSWORD=admin
