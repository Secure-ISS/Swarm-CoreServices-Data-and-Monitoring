# Database Configuration
# IMPORTANT: Copy this file to .env and update all passwords before use!

# Generate strong passwords with: openssl rand -base64 32

# RuVector Database (Project-specific)
RUVECTOR_HOST=localhost
RUVECTOR_PORT=5432
RUVECTOR_DB=distributed_postgres_cluster
RUVECTOR_USER=dpg_cluster
RUVECTOR_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# Shared Knowledge Database
SHARED_KNOWLEDGE_HOST=localhost
SHARED_KNOWLEDGE_PORT=5432
SHARED_KNOWLEDGE_DB=claude_flow_shared
SHARED_KNOWLEDGE_USER=shared_user
SHARED_KNOWLEDGE_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# Distributed Cluster Configuration
COORDINATOR_HOST=localhost
COORDINATOR_PORT=5432
COORDINATOR_DB=distributed_postgres_cluster
COORDINATOR_USER=dpg_cluster
COORDINATOR_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# Worker Nodes (comma-separated, optional)
WORKER_HOSTS=
WORKER_PORTS=
WORKER_DBS=
WORKER_USERS=
WORKER_PASSWORDS=
WORKER_SHARD_IDS=

# Replica Nodes (comma-separated, optional)
REPLICA_HOSTS=
REPLICA_PORTS=
REPLICA_DBS=
REPLICA_USERS=
REPLICA_PASSWORDS=

# Patroni HA Configuration
# Set ENABLE_PATRONI=true to enable HA mode
ENABLE_PATRONI=false

# Patroni REST API endpoints (comma-separated)
# Example: localhost,node2,node3
PATRONI_HOSTS=localhost
PATRONI_PORT=8008

# Database credentials for Patroni cluster
PATRONI_DB=distributed_postgres_cluster
PATRONI_USER=dpg_cluster
PATRONI_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# Connection pool settings for Patroni
PATRONI_MIN_CONNECTIONS=2
PATRONI_MAX_CONNECTIONS=20
PATRONI_HEALTH_CHECK_INTERVAL=30

# SSL/TLS Configuration for Patroni
PATRONI_SSLMODE=require
PATRONI_SSLROOTCERT=/path/to/ca-cert.pem
PATRONI_SSLCERT=/path/to/client-cert.pem
PATRONI_SSLKEY=/path/to/client-key.pem

# Docker Container Configuration
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

DOCKER_CONTAINER_NAME=ruvector-db
DOCKER_IMAGE=ruvnet/ruvector-postgres:latest

# SSL/TLS Configuration for Project Database
# Options: disable, allow, prefer, require, verify-ca, verify-full
# - disable: No SSL (NOT RECOMMENDED for production)
# - allow: Try non-SSL first, then SSL if server requires it
# - prefer: Try SSL first, fall back to non-SSL (DEFAULT)
# - require: Require SSL (recommended minimum)
# - verify-ca: Require SSL and verify server certificate
# - verify-full: Require SSL, verify certificate and hostname
RUVECTOR_SSLMODE=require
RUVECTOR_SSLROOTCERT=/path/to/ca-cert.pem
RUVECTOR_SSLCERT=/path/to/client-cert.pem
RUVECTOR_SSLKEY=/path/to/client-key.pem

# SSL/TLS Configuration for Shared Database
SHARED_KNOWLEDGE_SSLMODE=require
SHARED_KNOWLEDGE_SSLROOTCERT=/path/to/ca-cert.pem
SHARED_KNOWLEDGE_SSLCERT=/path/to/client-cert.pem
SHARED_KNOWLEDGE_SSLKEY=/path/to/client-key.pem

# SSL/TLS Configuration for Distributed Cluster
DISTRIBUTED_SSLMODE=require
DISTRIBUTED_SSLROOTCERT=/path/to/ca-cert.pem
DISTRIBUTED_SSLCERT=/path/to/client-cert.pem
DISTRIBUTED_SSLKEY=/path/to/client-key.pem

# Redis Cache (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
