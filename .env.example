# Database Configuration
# IMPORTANT: Copy this file to .env and update all passwords before use!

# Generate strong passwords with: openssl rand -base64 32

# Project Database Credentials
DPG_CLUSTER_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# Shared Database Credentials
SHARED_DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_32_CHARS_MIN

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB_PROJECT=distributed_postgres_cluster
POSTGRES_DB_SHARED=claude_flow_shared
POSTGRES_USER_PROJECT=dpg_cluster
POSTGRES_USER_SHARED=shared_user

# Docker Container Configuration
DOCKER_CONTAINER_NAME=ruvector-db
DOCKER_IMAGE=ruvnet/ruvector-postgres:latest

# Security Settings (optional)
POSTGRES_SSLMODE=require
POSTGRES_SSLROOTCERT=/path/to/ca-cert.pem

# Redis Cache (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
